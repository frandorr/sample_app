<%= link_to gravatar_for(current_user, size: 70), current_user %>
<h1>
  <%= current_user.name %>
  <%= current_user.ip_address %>
  <%= current_user.lat %>
  <%= current_user.lon%>
  <% if signed_in? %>
  	<%= @city %>
  <% end %>

</h1>
<span>
  <%= link_to "view my profile", current_user %>
</span>
<span>
  <%= pluralize(current_user.microposts.count, "micropost") %>
</span>
<span>
	<%= pluralize(current_user.swaps.count, "swap") %>
</span>